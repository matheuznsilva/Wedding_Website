<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Julia e Paulo Henrique</title>
    <link rel="icon" href="../assets/img/coracao-rosa-solido.webp" type="image/png">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;700&family=Great+Vibes&display=swap" rel="stylesheet">
</head>
<body style="background-image: url('<%= configuracoes.foto_fundo_url %>');">

    <%- include('../../public/components/header.html') %>

    <header class="home-hero">
        <div class="overlay"></div>
        <div class="hero-content">
            <h1 class="names">Júlia<br> & <br>Paulo Henrique</h1>
            <p class="date"><%= configuracoes.data_casamento ? configuracoes.data_casamento.toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' }) : 'Data não definida' %></p>
            <div id="countdown" class="countdown-timer" data-date="<%= configuracoes.data_casamento ? configuracoes.data_casamento.toISOString().slice(0,10) : '' %>">
                <div class="timer-box"><span id="days"></span><br>Dias</div>
                <div class="timer-box"><span id="hours"></span><br>Horas</div>
                <div class="timer-box"><span id="minutes"></span><br>Minutos</div>
                <div class="timer-box"><span id="seconds"></span><br>Segundos</div>
            </div>
        </div>
    </header>

    <main>
        </main>

    <footer>
        </footer>

    <script src="/assets/js/main.js"></script>
</body>
</html>